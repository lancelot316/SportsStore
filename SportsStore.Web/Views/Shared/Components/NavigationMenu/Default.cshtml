@model IEnumerable<string>
<nav class="nav nav-pills nav-fill flex-column">
    <a class="nav-link border mt-1" asp-action="Index" asp-route-category="" asp-controller="Home" asp-route-productPage="1">
        Home
    </a>
    @foreach (string category in Model)
    {
        <a class="nav-link @(category == ViewBag.SelectedCategory ? "active" : "") border mt-1"
           asp-controller="Home"
           asp-action="Index"
           asp-route-category="@category"
           asp-route-productPage="1">
            @category
        </a>
    }
</nav>