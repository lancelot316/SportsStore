@model SportsStore.WebUI.Models.Domain.Cart

<div id="cartSummary">
    <span class="caption">
        <b>Your cart:</b>
        <span id="csQuantity">@Model.Lines.Sum(x => x.Quantity)</span> item(s),
        <span id="csTotal">@Model.ComputeTotalValue().ToString("c")</span>
    </span>
    @Html.ActionLink("Checkout", "Index", "Cart",
       new { returnUrl = Request.Url.PathAndQuery },
       new { id="csLink" })
</div>